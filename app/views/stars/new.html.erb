  	<form>
  		<h4>Create a new Star</h4>
	  	<%= form_for(@star, url: {action: "create"}, html: {multipart: true}) do |f| %>
				<div class="form-group">
					<%= f.label :birth_name %>
					<%= f.text_field :birth_name, class: "form-control" , placeholder: "full name" %>
				</div>
				<div class="form-group">
					<%= f.label :birth_date %>
					<%= f.date_field :birth_date , class: "form-control"%>
				</div>

				<div class="form-group">
					<%= f.label :death_date %>
					<%= f.date_field :death_date , class: "form-control"%>
				</div>
				
				<div class="form-group">
					<%= f.label :nickname %>
					<%= f.text_field :nickname  , class: "form-control",placeholder: "full name"%>
				</div>
				
				<div class="form-group">
					<%= f.label :bio %>
					<%= f.text_area :bio  , class: "form-control",placeholder: "Artist Biography", rows: 10 %>
				</div>

				<div class="form-group">
					<%= f.label(:also_director, "Also Director") %>
					<%= f.check_box :also_director, class: 'checkbox-inline' %>
					<%= f.label( :also_screenwriter, "Also Screenwriter") %>
					<%= f.check_box :also_screenwriter, class: "checkbox-inline " %>
				</div>
				
				<div class="form-group">
					<%= f.label :country %>
					<%= f.select :country, @countries.each{|key|}, include_blank: false, class: "form-control" %>
				</div>	
				<div class="form-group">
					<%= f.label :hometown %>
					<%= f.text_field :hometown, class: "form-control",placeholder: "full name" %>
				</div>

				<div class="form-group">
					<strong>Profile Picture</strong><br />
					<%= f.file_field :profile_picture, accept: 'image/jpeg,image/gif,image/png' %>
				</div>

				<div class="form-group">
					<%= f.submit 'Save', class: "btn btn-success" %>
				</div>
			<% end %>
  	</form>

